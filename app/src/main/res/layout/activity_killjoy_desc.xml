<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KilljoyDesc">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="204dp"
                android:layout_height="408dp"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/killjoy_desc" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="204dp"
                android:layout_height="408dp"
                app:layout_column="1"
                app:layout_row="0" />

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:text="The genius of Germany, Killjoy effortlessly secures key battlefield positions with her arsenal of inventions. If their damage doesn't take her enemies out, the debuff her robots provide will make short work of them."
            app:layout_column="0"
            app:layout_row="1" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>