<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JettDesc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADD8E6"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <!-- Agent Title -->
    <TextView
        android:id="@+id/agentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E90FF"
        android:gravity="center"
        android:padding="8dp"
        android:text="JETT"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Image + Release Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Agent Image -->
        <ImageView
            android:id="@+id/imageViewJett"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_gradient_jett"
            android:scaleType="fitCenter"
            android:src="@drawable/jett_desc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/releaseDateLabel"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#1E90FF"
                android:gravity="center"
                android:padding="4dp"
                android:text="Release Date"
                android:textColor="#040404"
                android:textSize="16sp"
                android:textStyle="bold" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:background="#FFFFFF"
                android:theme="@style/ThemeOverlay.Material3.Light"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Description -->
        <TextView
            android:id="@+id/agentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FBFBFB"
            android:padding="16dp"
            android:text="Representing her home country of South Korea, Jett's agile and evasive fighting style lets her take risks no one else can. She runs circles around every skirmish, cutting enemies before they even know what hit them."
            android:textAlignment="center"
            android:textColor="#020202"
            android:textSize="16sp" />

    <!-- Skills Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E90FF"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:weightSum="4">

        <!-- Skill 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/skill1Icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#000000"
                android:padding="5dp"
                android:src="@drawable/jett_skill1" />

            <TextView
                android:id="@+id/skill1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cloudburst"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Skill 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/skill2Icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#000000"
                android:padding="5dp"
                android:src="@drawable/jett_skill2" />

            <TextView
                android:id="@+id/skill2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Updraft"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Skill 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/skill3Icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#000000"
                android:padding="5dp"
                android:src="@drawable/jett_skill3" />

            <TextView
                android:id="@+id/skill3Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tailwind"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Skill 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/skill4Icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#000000"
                android:padding="5dp"
                android:src="@drawable/jett_skill4" />

            <TextView
                android:id="@+id/skill4Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blade Storm"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </LinearLayout>

    <!-- BACK BUTTON-->
<Button
android:id="@+id/backButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Back"
android:padding="8dp"
android:textSize="16sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_margin="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
