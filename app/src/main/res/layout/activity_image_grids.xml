<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ImageGridsActivity">

    <!-- Two toggle buttons side by side -->

    <!-- Volume Controls (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/volumeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Volume Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:contentDescription="Volume Icon"
                android:layout_marginEnd="8dp" />

            <!-- SeekBar -->
            <SeekBar
                android:id="@+id/volumeSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50" />
        </LinearLayout>

        <!-- Percentage Label -->
        <TextView
            android:id="@+id/volumePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%" />
    </LinearLayout>

    <!-- Radio buttons and theme switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/AgentRolesRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="All" />

            <RadioButton
                android:id="@+id/radioDuelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duelist" />

            <RadioButton
                android:id="@+id/radioSentinel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sentinel" />

            <RadioButton
                android:id="@+id/radioInitiator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initiator" />
        </RadioGroup>

        <Switch
            android:layout_margin="4dp"
            android:id="@+id/switchThemeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Image Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Gallery Toggle -->
        <ToggleButton
            android:id="@+id/toggleGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textOff="Original"
            android:textOn="Alternative" />

        <!-- Volume Toggle -->
        <ToggleButton
            android:id="@+id/toggleVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Show Volume"
            android:textOn="Hide Volume" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/imageGridLayout"
            android:columnCount="2"
            android:rowCount="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewJett"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image1"
                android:scaleType="fitCenter"
                android:src="@drawable/jett" />

            <ImageView
                android:id="@+id/imageViewTejo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image2"
                android:scaleType="fitCenter"
                android:src="@drawable/tejo" />

            <ImageView
                android:id="@+id/imageViewDeadlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image3"
                android:scaleType="fitCenter"
                android:src="@drawable/deadlock" />

            <ImageView
                android:id="@+id/imageViewIso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image4"
                android:scaleType="fitCenter"
                android:src="@drawable/iso" />

            <ImageView
                android:id="@+id/imageViewSova"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image5"
                android:scaleType="fitCenter"
                android:src="@drawable/sova" />

            <ImageView
                android:id="@+id/imageViewKilljoy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image6"
                android:scaleType="fitCenter"
                android:src="@drawable/killjoy" />
        </GridLayout>
    </ScrollView>
</LinearLayout>
