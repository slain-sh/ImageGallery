<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="24dp"
    tools:context=".LoginActivity">

    <RadioGroup
        android:id="@+id/AgentRolesRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checked="true"/>

        <RadioButton android:id="@+id/radioDuelist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duelist" />

        <RadioButton android:id="@+id/radioSentinel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentinel" />

        <RadioButton android:id="@+id/radioInitiator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initiator" />

    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:id="@+id/imageGridLayout"
            android:columnCount="2"
            android:rowCount="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewJett"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/jett"
                android:layout_margin="4dp" />
            <ImageView
                android:id="@+id/imageViewTejo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/tejo"
                android:layout_margin="4dp" />
            <ImageView
                android:id="@+id/imageViewDeadlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/deadlock"
                android:layout_margin="4dp" />
            <ImageView
                android:id="@+id/imageViewIso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/iso"
                android:layout_margin="4dp" />
            <ImageView
                android:id="@+id/imageViewSova"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/sova"
                android:layout_margin="4dp" />
            <ImageView
                android:id="@+id/imageViewKilljoy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/killjoy"
                android:layout_margin="4dp" />

        </GridLayout>

    </ScrollView>

</LinearLayout>
